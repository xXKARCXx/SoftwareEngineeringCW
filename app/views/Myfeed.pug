extends layout

block content
  - console.log(data) // Debugging output
  .main-content
    h1 All Tips
    table(border=1)
      thead
        tr
          th ID
          th Title
          th Description
          th Author
          th Game
      tbody
        each item in data
          tr
            td= item.id
            td
              a(href=`/tips/${item.id}`)= item.title
            td= item.description || 'No description'
            td= item.author || 'Unknown'
            td= item.game || 'Unknown Game'