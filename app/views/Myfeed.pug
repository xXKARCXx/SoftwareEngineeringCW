extends layout

block content
  - console.log(data) // Debugging output
    h1 All Tips
  .Expl_con
    table(border=1)
      thead
        tr
          th Game
          th Description
          th Author
      tbody
        each item in data
          tr
            td= item.game || 'Unknown Game'
            td= item.description || 'No description'
            td= item.author || 'Unknown'
