extends layout

block content
  - console.log(data) // Debugging output
    h1.Explorer Explorer
  .Expl_con
    table.expl_table(border=1)
      thead
        tr
          th Title
          th Description
          th Created
          th GAME
      tbody
        each item in data
          tr
            td= item.Title
            td= item.description
            td= item.created
            td
              if item.Game_ID
                a(href=`/game/${item.Game_ID}`)= item.Game_ID 
              else
                span No Game ID